# frozen_string_literal: true

instrumentation_methods :chain, :prepend

suite_condition("Does not run on JRuby") do
  RUBY_PLATFORM != 'java'
end

VERSIONS = [
  [nil, 2.7]
]

def gem_list(sidekiq_version = nil)
  <<-RB
    gem 'rdkafka'#{sidekiq_version}
  RB
end

create_gemfiles(VERSIONS)
